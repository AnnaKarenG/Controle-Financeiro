@model User

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastra-se</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</head>
<body class="text-center" style="background-color: #f5f5f5;display: flex; align-items: center; padding-top: 40px; padding-bottom: 40px;">

    <header>
        <div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center link-body-emphasis text-decoration-none">
                <img src="imagens/logo.png" width="40" height="40" class="me-2" viewBox="0 0 118 94" role="img"><title>inicio</title>
                <span class="fs-4">Controle de Gastos</span>
            </a>

            <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
                <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/revenue">Receita</a>
                <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/expense">Despesa</a>
                <a class="me-3 py-2 link-body-emphasis text-decoration-none" href="/category">Categoria</a>
                <a class="py-2 link-body-emphasis text-decoration-none" href="/card">Cartão</a>

                <a class="me-3 py-2 link-body-emphasis text-decoration-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" style="margin-left: 35px;">
                    @Model.Name
                </a>

                <ul class="dropdown-menu">
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/Home">Sair</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main>
            <div class="py-5 text-center">
                <a href="index.html"><img class="mb-4" src="imagens/logo.png" alt="" width="72" height="72"></a>
                <h2>Informações de usuário</h2>
                <p class="lead">Aqui você poderar ver todas as suas informações de cadastro</p>
            </div>

            <div class="form-floating">
                <form class="needs-validation" novalidate="" style="margin-left: 20%; margin-right: 20%;" method="post" action="https://localhost:44313/User/ToAddUser">
                    <div class="row g-3">

                        <div class="col-12">
                            <label for="username" class="form-label">Nome</label>
                            <div class="input-group has-validation">
                                <input type="text" class="form-control" id="username" required="" name="Name" value="@Model.Name" readonly>
                                <div class="invalid-feedback">
                                    Nome é obrigatório.
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="email" class="form-label">Email <span class="text-body-secondary"></span></label>
                            <input type="email" class="form-control" id="email" placeholder="email@example.com" name="Email" value="@Model.Email" readonly>
                            <div class="invalid-feedback">
                                Insira um endereço de e-mail válido para atualizações de envio.
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupFile01">Avatar</label>
                            <img src="@Model.Avatar" alt="Descrição da imagem" readonly>
                        </div>
                    </div>

                    <hr class="my-4">
                    <a role="button" class="btn btn-secondary" asp-controller="User" asp-action="ContaUser">Voltar</a>
                </form>

            </div>
        </main>


        <footer class="my-5 pt-5 text-body-secondary text-center text-small">
            <p class="mb-1">© 2023 Controle de gastos</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacidade</a></li>
                <li class="list-inline-item"><a href="#">Termos</a></li>
                <li class="list-inline-item"><a href="#">Suporte</a></li>
            </ul>
        </footer>
    </div>
</body>
</html>