@model List<Card> 
@{
    ViewData["Title"] = "Lista de cartões";
}
<header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Controle Financeiro</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Category" asp-action="Index">Categorias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light btn-primary" asp-area="" asp-controller="Card" asp-action="Index"> Meus Cartões</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Revenue" asp-action="Index"> Minhas Receitas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Expense" asp-action="Index"> Minhas Despesas</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </header>

<h2>Cartões</h2>
<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Identificador</th>
                <th scope="col">Número</th>
                <th scope="col">Tipo</th>
                <th scope="col">Valor em conta corrente</th>
                <th scope="col">Limite</th>
                <th scope="col">Valor da Fatura</th>
                <th scope="col">Data da Fatura</th>
                <th scope="col">Bandeira</th>
                <th scope="col">Usuário</th>
                <th scope="col"></th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach( Card card in Model)
                {
                    <tr>
                        <th scope="row">@card.CardId</th>
                        <td>@card.NumberCard</td>
                        <td>@card.type</td>
                        <td>@card.Balance</td>
                        <td>@card.Limite</td>
                        <td>@card.InvoiceAmount</td>
                        <td>@card.InvoiceDate</td>
                        <td>@card.Flag</td>
                        <td>@card.Nome</td>
                        <td></td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a role="button" class="btn btn-primary" asp-route-id="@card.CardId" asp-controller="Card" asp-action="UpdateCard">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@card.CardId" asp-controller="Card" asp-action="DeleteCard" >Excluir</a>
                            </div>
                        </td>
                    </tr>

                }

            }
        </tbody>
    </table>

    <div>

        <a role="button" class="btn btn-success float-right" style="color:white" asp-controller="Card" asp-action="AddCard"> Novo Cartão</a>

    </div>


</div>