@model List<Expense> 
@{
    ViewData["Title"] = "Lista de despesas";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Controle Financeiro</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Category" asp-action="Index">Categorias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Card" asp-action="Index"> Meus Cartões</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Revenue" asp-action="Index"> Minhas Receitas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light btn-primary" asp-area="" asp-controller="Expense" asp-action="Index"> Minhas Despesas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<h2>Despesas</h2>
<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Identificador</th>
                <th scope="col">Valor</th>
                <th scope="col">Descrição</th>
                <th scope="col">Tipo de pagamento</th>
                <th scope="col">Número de parcelas</th>
                <th scope="col">Status</th>
                <th scope="col">Número do cartão</th>
                <th scope="col">Data</th>
                <th scope="col">Nome da categoria</th>
                <th scope="col">Usuário</th>
                <th scope="col"></th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach( Expense expense in Model)
                {
                    <tr>
                        <th scope="row">@expense.ExpenseId</th>
                        <td>@expense.Value</td>
                        <td>@expense.Description</td>
                        <td>@expense.type</td>
                        <td>@expense.NumberInstallments</td>
                        <td>@expense.Status</td>
                        <td>@expense.NumberCard</td>
                        <td>@expense.Date</td>
                        <td>@expense.CategoryId</td>
                        <td>@expense.UserId</td>
                        <td></td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a role="button" class="btn btn-primary" asp-route-id="@expense.ExpenseId" asp-controller="Expense" asp-action="UpdateExpense">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@expense.ExpenseId" asp-controller="Expense" asp-action="DeleteExpense" >Excluir</a>
                            </div>
                        </td>
                    </tr>

                }

            }
        </tbody>
    </table>

    <div>

        <a role="button" class="btn btn-success float-right" style="color:white" asp-controller="Expense" asp-action="AddExpense"> Nova Despesa</a>

    </div>


</div>