@model Expense
@{
    ViewData["Title"] = "Exclusão de Despesa";
}

<div class="text-center">
    <h3>Excluir a despesa (@Model.ExpenseId) </h3>
</div>


<div class="text-center" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dejesa realmente excluir a despesa?</h5>
            </div>
            <div>
               <br />
                <form asp-controller="Expense" asp-action="DeleteRecordExpense" method="post">
                    <input type="hidden" asp-for="@Model.ExpenseId" name="id"/>

                    <button class="btn btn-danger"  type="submit">Excluir</button>
                    <a role="button" class="btn btn-secondary" asp-controller="Expense" asp-action="Index">Voltar</a>

                </form>
                <br />
            </div>
        </div>
    </div>
</div>
