@{
    ViewData["Title"] = "Edição de Categoria";
}

<div class="text-center">
    <h3>Editar Categoria</h3>
</div>

<form>
    <div class="form-group">
        <label for="nome da categoria">Nome da Categoria</label>
        <input type="text" class="form-control" placeholder="digite o nome da categoria">
        <small class="form-text text-muted">Lembre-se de adicionar uma categoria que ainda não possue registro.</small>
    </div>
    <button type="submit" class="btn btn-primary">Adicinar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Category" asp-action="Index">Voltar</a>

</form>