@model Category
@{
    ViewData["Title"] = "Edição de Categoria";
}

<div class="text-center">
    <h3>Editar Categoria</h3>
</div>

<form asp-controller="Category" asp-action="ChangeCategory" method="post">
    
    <input type="hidden" asp-for="CategoryId"/>
    <div class="form-group">
        <label for="nome da categoria">Nome da Categoria</label>

        <input type="text" asp-for="CategoryName" class="form-control" placeholder="digite o nome da categoria">

        <small class="form-text text-muted">Lembre-se de adicionar uma categoria que ainda não possui registro.</small>

    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Category" asp-action="Index">Voltar</a>

</form>

