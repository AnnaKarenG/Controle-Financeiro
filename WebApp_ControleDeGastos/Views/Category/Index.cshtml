@model List<Category> 
@{
    ViewData["Title"] = "Lista de Categorias";
}
<header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Controle Financeiro</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light btn-primary" asp-area="" asp-controller="Category" asp-action="Index">Categorias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Card" asp-action="Index"> Meus Cartões</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Revenue" asp-action="Index"> Minhas Receitas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="Expense" asp-action="Index"> Minhas Despesas</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </header>

<h2>Categorias</h2>
<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Identificador</th>
                <th scope="col">Nome</th>
                <th scope="col"></th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach( Category categoria in Model)
                {
                    <tr>
                        <th scope="row">@categoria.CategoryId</th>
                        <td>@categoria.CategoryName</td>
                        <td></td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a role="button" class="btn btn-primary" asp-route-id="@categoria.CategoryId" asp-controller="Category" asp-action="UpdateCategory">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@categoria.CategoryId" asp-controller="Category" asp-action="DeleteCategory" >Excluir</a>
                            </div>
                        </td>
                    </tr>

                }

            }
        </tbody>
    </table>

    <div>

        <a role="button" class="btn btn-success float-right" style="color:white" asp-controller="Category" asp-action="AddCategory"> Nova Categoria</a>

    </div>


</div>