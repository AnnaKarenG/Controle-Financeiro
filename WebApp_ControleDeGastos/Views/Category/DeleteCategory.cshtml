@model Category
@{
    ViewData["Title"] = "Edição de Categoria";
}

<div class="text-center">
    <h3>Excluir a Categoria (@Model.CategoryName) </h3>
</div>


<div class="text-center" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dejesa realmente excluir da categoria?</h5>
            </div>
            <div>
               <br />
                <form asp-controller="Category" asp-action="DeleteRecordCategory" method="post">
                    <input type="hidden" asp-for="CategoryId" />

                    <a role="button" class="btn btn-danger" asp-action="DeleteRecordCategory" asp-controller="Category" asp-router-id="@Model.CategoryId">Excluir</a>
                    <a role="button" class="btn btn-secondary" asp-controller="Category" asp-action="Index">Voltar</a>

                </form>
                <br />
            </div>
        </div>
    </div>
</div>
